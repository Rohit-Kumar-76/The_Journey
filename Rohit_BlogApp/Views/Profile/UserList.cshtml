@model List<User>

<div class="max-w-4xl mx-auto mt-10 p-5 bg-white shadow-lg rounded-lg">
    @* <h2 class="text-2xl font-bold text-center text-gray-800 mb-5">Search Results</h2> *@

    @if (Model.Count > 0)
    {
        <div class="space-y-4">
            @foreach (var user in Model)
            {
                <div class="flex items-center p-4 bg-gray-100 rounded-lg shadow hover:shadow-lg transition">
                    <!-- Profile Icon -->
                    @if (!string.IsNullOrEmpty(user.ProfileUrl))
                    {
                        <a href="/Profile/UserProfile/@user.Username">
                            <div class="w-14 h-14 rounded-full" style="background: url('@user.ProfileUrl') center center / cover no-repeat;"> </div>
                        </a>
                    }
                    else
                    {
                        <a href="/Profile/UserProfile/@user.Username">
                            <div class="w-14 h-14 rounded-full" style="background: url('/Img//profile-icon.jpg') center center / cover no-repeat; border:2px solid black"></div>
                        </a>
                    }

                 

                    <!-- User Info -->
                    <div class="ml-4 flex-1">
                        <a href="/Profile/UserProfile/@user.Username">
                            <h3 class="text-lg font-semibold text-gray-800">@user.Username</h3></a>
                        @if (!string.IsNullOrEmpty(user.Email))
                        {
                            <p class="text-sm text-gray-500">@user.Email</p>
                        }
                    </div>

                    <!-- View Profile Button -->
                    <a href="/Profile/UserProfile/@user.Username"
                       class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
                        View Profile
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-gray-500 mt-5">No users found!</p>
    }
</div>
