@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login - The Journey</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <img src="/Img/logo-color.png" class="text-2xl font-bold text-center mb-6" />
        <h1 class="text-2xl font-bold text-center mb-6">Welcome to The Journey</h1>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 text-red-700 p-2 mb-4 rounded-md">
                @TempData["ErrorMessage"]
            </div>
        }

        <form action="/Admin/Login" method="post" class="space-y-4">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <input type="email" id="email" name="Username" required
                       class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="relative">
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>

                <div class="relative">
                    <input type="password" id="password" name="Password" required
                           class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 pr-10">

                    <!-- Eye Icon Button (Properly Centered) -->
                    <button type="button" id="togglePassword" class="absolute inset-y-0 right-0 flex items-center pr-3">
                        <span id="eyeIcon" class="text-lg">🙈</span>
                    </button>
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">Login</button>
        </form>

        <script>
            document.getElementById("togglePassword").addEventListener("click", function () {
                var passwordField = document.getElementById("password");
                var eyeIcon = document.getElementById("eyeIcon");

                // Toggle password field type
                if (passwordField.type === "password") {
                    passwordField.type = "text";  // Show password
                    eyeIcon.innerHTML = "🙉";  // Change to "Dekhne Wala Bandar"
                } else {
                    passwordField.type = "password";  // Hide password
                    eyeIcon.innerHTML = "🙈";  // Change to "Muh Bandh Kiya Hua Bandar"
                }
            });
        </script>

    </div>
</body>
</html>
